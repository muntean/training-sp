<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="rental_view_form">
            <field name="name">library.rental.view.form</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <form string="Rental Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="customer_id"/>
                            </group>
                            <group>
                                <field name="book_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="rental_view_list">
            <field name="name">library.rental.view.list</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <tree string="Rental List">
                    <field name="customer_id"/>
                    <field name="book_id"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="rental_view_map">
            <field name="name">library.rental.view.map</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <map res_partner="customer_id" hide_name="True" hide_address="True">
                    <field name="customer_id" string="Customer:"/>
                    <field name="book_id" string="Book:"/>
                </map>
            </field>
        </record>
    </data>
</odoo>